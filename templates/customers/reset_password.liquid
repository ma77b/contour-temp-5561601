{% layout settings.customer_layout %}

<div id="customer-accounts" class="clearfix side-pad">
    <h1 class="title">{{ settings.tr_account_reset }}</h1>
    <p class="note">Enter a new password for {{ email }}</p>

    {% form 'reset_customer_password' %}
    	{% if form.errors %}
    		<div class="alert alert-info">{{ form.errors | default_errors }}</div>
    	{% endif %}
  
      <input type="password" value="" placeholder="Password" name="customer[password]" id="customer_password" class="input-xlarge" />
      <input type="password" value="" placeholder="Confirm Password" name="customer[password_confirmation]" id="customer_password_confirmation" class="input-xlarge" />
      <button class="btn" type="submit">Reset Password</button> 
  {% endform %}
</div>

